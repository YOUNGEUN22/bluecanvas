<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="64dp"
    tools:context="com.example.bluecanvas.JoinActivity">

    <EditText
        android:id="@+id/editId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input ID"
        android:text="tizen"/>

    <EditText
        android:id="@+id/editPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editId"
        android:layout_marginTop="30dp"
        android:hint="Input PW"
        android:inputType="textPassword"
        android:text="tizen"/>

    <EditText
        android:id="@+id/editPw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPw"
        android:layout_marginTop="30dp"
        android:hint="Input PW again"
        android:inputType="textPassword"
        android:text="tizen"/>

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPw2"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:text="Join"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnJoin"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:text="Cancel"/>

</RelativeLayout>
